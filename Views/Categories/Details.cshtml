@model RealEstateMVC.Models.Category

@{
    ViewData["Title"] = "تفاصيل التصنيف";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i> تفاصيل التصنيف</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">اسم التصنيف:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="bi bi-pencil-square"></i> تعديل
            </a>
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="bi bi-arrow-bar-left"></i> الرجوع للقائمة
            </a>
        </div>
    </div>
</div>
