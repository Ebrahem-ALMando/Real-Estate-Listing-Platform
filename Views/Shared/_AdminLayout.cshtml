@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>لوحة التحكم - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/homeverse.css" />

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- AOS - Animation on Scroll -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding: 1rem;
        }
        .sidebar a {
            color: #ddd;
            display: block;
            padding: 0.5rem 0;
            text-decoration: none;
        }
        .sidebar a:hover {
            color: white;
        }
        .main {
            padding: 2rem;
        }

        html {
            direction: rtl;
            text-align: right;
            font-family: 'Cairo', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-2 sidebar">
                <h4 class="mb-4">لوحة التحكم</h4>

                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> الرئيسية
                </a>

                <a asp-controller="Properties" asp-action="Index">
                    <i class="bi bi-building"></i> العقارات
                </a>

                <a asp-controller="Categories" asp-action="Index">
                    <i class="bi bi-list"></i> الأصناف
                </a>
                <a asp-controller="Booking" asp-action="Index">
                    <i class="bi bi-journal-check"></i> الطلبات
                </a>
                <a asp-controller="Messages" asp-action="Index">
                    <i class="bi bi-envelope"></i> الرسائل
                </a>

                <hr />
                <a asp-controller="Home" asp-action="Index" class="mt-3 d-block">
                    <i class="bi bi-house-door"></i> الذهاب إلى الموقع
                </a>
                <hr />
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button class="btn btn-danger w-100">
                        <i class="bi bi-box-arrow-right"></i> تسجيل الخروج
                    </button>
                </form>
            </div>




  
            <div class="col-md-10 main">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- AOS Init -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)


</body>
</html>
