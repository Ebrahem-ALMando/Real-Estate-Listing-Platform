@{
    ViewData["Title"] = "Property Details";
}

<section class="property-details">
    <div class="container">

        <!-- MAIN BANNER -->
        <div class="property-banner">
            <img src="~/images/property-1.jpg" alt="Main Property Image" class="main-image" />
            <div class="gallery-thumbs">
                <img src="~/images/property-1.jpg" alt="Gallery 1" />
                <img src="~/images/property-2.jpg" alt="Gallery 2" />
                <img src="~/images/property-3.jpg" alt="Gallery 3" />
                <img src="~/images/property-4.png" alt="Gallery 4" />
            </div>
        </div>

        <!-- DETAILS SECTION -->
        <div class="details-content">
            <div class="details-left">
                <h1 class="property-title">Luxury Villa in Rego Park</h1>
                <p class="property-location">
                    <ion-icon name="location-outline"></ion-icon>
                    Belmont Gardens, Chicago
                </p>
                <p class="property-price">
                    <strong>$34,900</strong> <span>/ Month</span>
                </p>

                <ul class="property-features">
                    <li><ion-icon name="bed-outline"></ion-icon> <strong>3</strong> Bedrooms</li>
                    <li><ion-icon name="water-outline"></ion-icon> <strong>2</strong> Bathrooms</li>
                    <li><ion-icon name="resize-outline"></ion-icon> <strong>3450</strong> Sq Ft</li>
                    <li><ion-icon name="car-sport-outline"></ion-icon> <strong>2</strong> Parking Spaces</li>
                    <li><ion-icon name="leaf-outline"></ion-icon> Garden View</li>
                </ul>

                <h2 class="section-title">Description</h2>
                <p class="property-description">
                    Discover this beautiful family villa in the heart of the city, offering luxury, security, and space.
                    Featuring high-end finishes, smart home integration, and a peaceful garden view – it's the perfect place to call home.
                </p>

                <h2 class="section-title">Amenities</h2>
                <ul class="amenities-list">
                    <li><ion-icon name="water-outline"></ion-icon> Swimming Pool</li>
                    <li><ion-icon name="fitness-outline"></ion-icon> Gym & Fitness Center</li>
                    <li><ion-icon name="shield-checkmark-outline"></ion-icon> 24/7 Security</li>
                    <li><ion-icon name="wifi-outline"></ion-icon> High-Speed Internet</li>
                    <li><ion-icon name="sparkles-outline"></ion-icon> Smart Home System</li>
                </ul>
            </div>

            <div class="details-right">
                <div class="agent-card">
                    <img src="~/images/author.jpg" alt="Agent Image" class="agent-image" />
                    <h3 class="agent-name">William Seklo</h3>
                    <p class="agent-title">Senior Estate Agent</p>
                    <a href="tel:+123456789" class="agent-contact">
                        <ion-icon name="call-outline"></ion-icon> +1 234 567 89
                    </a>
                    <a href="mailto:william@homeverse.com" class="agent-contact">
                        <ion-icon name="mail-outline"></ion-icon> william@homeverse.com
                    </a>
                    <button class="btn">Send Message</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .property-details {
            padding: 60px 0;
        }

        .main-image {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .gallery-thumbs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
        }

        .gallery-thumbs img {
            width: 100px;
            border-radius: 6px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .gallery-thumbs img:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        .details-content {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
        }

        .details-left {
            flex: 1 1 60%;
        }

        .details-right {
            flex: 1 1 30%;
        }

        .property-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .property-location {
            color: #6c757d;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .property-price {
            font-size: 26px;
            font-weight: 600;
            color: #007BFF;
            margin-bottom: 25px;
        }

        .property-features,
        .amenities-list {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .property-features li,
        .amenities-list li {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
            font-size: 16px;
        }

        .section-title {
            margin-top: 30px;
            margin-bottom: 10px;
            font-size: 20px;
            font-weight: 600;
        }

        .property-description {
            line-height: 1.7;
            color: #333;
        }

        .agent-card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            padding: 25px;
            text-align: center;
            background: #f9f9f9;
        }

        .agent-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 15px;
        }

        .agent-name {
            font-size: 20px;
            font-weight: 600;
        }

        .agent-title {
            color: #777;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .agent-contact {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #007BFF;
            text-decoration: none;
            justify-content: center;
            margin: 10px 0;
        }

        .btn {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
}
