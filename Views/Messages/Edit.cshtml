@model RealEstateMVC.Models.Message

@{
    ViewData["Title"] = "تعديل الرسالة";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> تعديل الرسالة</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-bold">المحتوى</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SentAt" class="form-label fw-bold">تاريخ الإرسال</label>
                    <input asp-for="SentAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="SentAt" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsRead" />
                    <label class="form-check-label fw-bold" asp-for="IsRead">تمت القراءة</label>
                </div>

                <div class="mb-3">
                    <label asp-for="SenderId" class="form-label fw-bold">المرسل</label>
                    <select asp-for="SenderId" class="form-select" asp-items="ViewBag.SenderId"></select>
                    <span asp-validation-for="SenderId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReceiverId" class="form-label fw-bold">المستلم</label>
                    <select asp-for="ReceiverId" class="form-select" asp-items="ViewBag.ReceiverId"></select>
                    <span asp-validation-for="ReceiverId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> الرجوع
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> حفظ التعديلات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
