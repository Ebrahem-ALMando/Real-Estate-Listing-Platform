@model RealEstateMVC.Models.Message

@{
    ViewData["Title"] = "إنشاء رسالة";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-chat-left-text me-2"></i> إنشاء رسالة جديدة</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-bold"></label>
                    <textarea asp-for="Content" class="form-control" rows="4" placeholder="اكتب محتوى الرسالة هنا..."></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SentAt" class="form-label fw-bold"></label>
                    <input asp-for="SentAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="SentAt" class="text-danger small"></span>
                </div>

                @* <div class="form-check form-switch mb-3"> *@
                @*     <input class="form-check-input" type="checkbox" asp-for="IsRead" /> *@
                @*     <label class="form-check-label fw-bold" asp-for="IsRead"></label> *@
                @* </div> *@

                <div class="mb-3">
                    <label asp-for="SenderId" class="form-label fw-bold">المرسل</label>
                    <select asp-for="SenderId" class="form-select" asp-items="ViewBag.SenderId">
                        <option disabled selected>اختر المرسل</option>
                    </select>
                    <span asp-validation-for="SenderId" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ReceiverId" class="form-label fw-bold">المستلم</label>
                    <select asp-for="ReceiverId" class="form-select" asp-items="ViewBag.ReceiverId">
                        <option disabled selected>اختر المستلم</option>
                    </select>
                    <span asp-validation-for="ReceiverId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> العودة للقائمة
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send"></i> إرسال
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
