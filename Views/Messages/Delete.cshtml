@model RealEstateMVC.Models.Message

@{
    ViewData["Title"] = "حذف الرسالة";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i> تأكيد حذف الرسالة</h4>
        </div>
        <div class="card-body">

            <div class="alert alert-warning fw-bold">
                هل أنت متأكد أنك تريد حذف هذه الرسالة؟
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">المحتوى:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3 fw-bold">تاريخ الإرسال:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SentAt)</dd>

                <dt class="col-sm-3 fw-bold">تمت القراءة:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IsRead)</dd>

                <dt class="col-sm-3 fw-bold">المرسل:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sender.Id)</dd>

                <dt class="col-sm-3 fw-bold">المستلم:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Receiver.Id)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> الرجوع للقائمة
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> تأكيد الحذف
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
