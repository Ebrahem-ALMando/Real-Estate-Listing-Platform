@model IEnumerable<RealEstateMVC.Models.Message>

@{
    ViewData["Title"] = "الرسائل";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-chat-dots-fill me-2"></i> قائمة الرسائل</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> رسالة جديدة
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle text-center shadow-sm bg-white">
            <thead class="table-light">
                <tr>
                    <th>المحتوى</th>
                    <th>تاريخ الإرسال</th>
                    <th>مقروءة؟</th>
                    <th>المرسل</th>
                    <th>المستلم</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Content)</td>
                        <td>@item.SentAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>
                            @if (item.IsRead)
                            {
                                <span class="badge bg-success">نعم</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">لا</span>
                            }
                        </td>
                        <td>@item.Sender?.Id</td>
                        <td>@item.Receiver?.Id</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
