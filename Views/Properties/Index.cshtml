@model IEnumerable<RealEstateMVC.Models.Property>

@{
    ViewData["Title"] = "قائمة العقارات";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">إدارة العقارات</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> إضافة عقار
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>العنوان</th>
                    <th>الوصف</th>
                    <th>السعر</th>
                    <th>العنوان الكامل</th>
                    <th>الغرف</th>
                    <th>الحمامات</th>
                    <th>المساحة (م²)</th>
                    <th>الصورة الرئيسية</th>
                    <th>مميز؟</th>
                    <th>التصنيف</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("N0") ريال</td>
                        <td>@item.Address</td>
                        <td>@item.Bedrooms</td>
                        <td>@item.Bathrooms</td>
                        <td>@item.Area</td>
                        <td>
                            <img src="@item.MainImageUrl" alt="Image" style="max-width: 80px; max-height: 60px;" />
                        </td>
                        <td>
                            @(item.IsFeatured ? "نعم" : "لا")
                        </td>
                        <td>@item.Category?.Name</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
