@model RealEstateMVC.Models.Property

@{
    ViewData["Title"] = "تعديل العقار";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4 fw-bold">تعديل بيانات العقار</h2>

    <form asp-action="Edit" class="row g-3 shadow-sm p-4 rounded bg-white">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="col-md-6">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Price" class="form-label fw-semibold"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Address" class="form-label fw-semibold"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Bedrooms" class="form-label fw-semibold"></label>
            <input asp-for="Bedrooms" class="form-control" />
            <span asp-validation-for="Bedrooms" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Bathrooms" class="form-label fw-semibold"></label>
            <input asp-for="Bathrooms" class="form-control" />
            <span asp-validation-for="Bathrooms" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Area" class="form-label fw-semibold"></label>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger small"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="MainImageUrl" class="form-label fw-semibold"></label>
            <input asp-for="MainImageUrl" class="form-control" />
            <span asp-validation-for="MainImageUrl" class="text-danger small"></span>
        </div>

        <div class="col-md-4 mt-4 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" asp-for="IsFeatured" />
                <label class="form-check-label fw-semibold" asp-for="IsFeatured">
                    مميز؟
                </label>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label fw-semibold">التصنيف</label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-danger small"></span>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-save2"></i> حفظ التعديلات
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-return-left"></i> العودة للقائمة
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
