@model RealEstateMVC.Models.Property

@{
    ViewData["Title"] = "إضافة عقار";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-house-add me-2"></i> إضافة عقار جديد</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="عنوان العقار" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="وصف مختصر عن العقار"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control" placeholder="السعر" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Area" class="form-label fw-bold"></label>
                        <input asp-for="Area" class="form-control" placeholder="المساحة بالمتر المربع" />
                        <span asp-validation-for="Area" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Address" class="form-label fw-bold"></label>
                        <input asp-for="Address" class="form-control" placeholder="العنوان الكامل" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Bedrooms" class="form-label fw-bold"></label>
                        <input asp-for="Bedrooms" class="form-control" placeholder="عدد غرف النوم" />
                        <span asp-validation-for="Bedrooms" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Bathrooms" class="form-label fw-bold"></label>
                        <input asp-for="Bathrooms" class="form-control" placeholder="عدد الحمامات" />
                        <span asp-validation-for="Bathrooms" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="MainImageUrl" class="form-label fw-bold"></label>
                    <input asp-for="MainImageUrl" class="form-control" placeholder="رابط الصورة الرئيسية" />
                    <span asp-validation-for="MainImageUrl" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">اختر التصنيف</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" asp-for="IsFeatured" type="checkbox" role="switch" />
                    <label class="form-check-label fw-bold" asp-for="IsFeatured">عقار مميز</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-bar-left"></i> الرجوع للقائمة
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-plus-circle"></i> إضافة
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
