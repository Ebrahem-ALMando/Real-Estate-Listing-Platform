@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-5" dir="rtl">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="البريد الإلكتروني" />
                        <label asp-for="Input.Email">البريد الإلكتروني</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="كلمة المرور" />
                        <label asp-for="Input.Password">كلمة المرور</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            تذكرني
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-success w-100 mb-3">تسجيل الدخول</button>

                    <div class="d-flex flex-column text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none mb-1">هل نسيت كلمة المرور؟</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none mb-1">إنشاء حساب جديد</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">إعادة إرسال تأكيد البريد</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
